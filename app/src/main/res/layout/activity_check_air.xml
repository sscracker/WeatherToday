<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="#567"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckAirActivity">

    <Button
        android:text="Check air around me"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp"
        android:backgroundTint="@color/teal_200"
        android:fontFamily="@font/merienda_one"
        android:id="@+id/checkQualityAirButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Button>

    <TextView
        android:id="@+id/resultCo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkQualityAirButton"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/merienda_one"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="25sp">

    </TextView>

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultCo"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/merienda_one"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="25sp">

    </TextView>




</RelativeLayout>